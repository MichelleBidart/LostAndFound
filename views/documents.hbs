<div class="container">
    <br />
    <!-- Importante indicar el path donde se encuentra el metodo POST -->
        {{#if this.isPut}}
                 <form method="POST" action="/users/{{id}}/documents/{{document._id}}?_method=PUT">
                <input type="hidden" name="_method" value="put" />
            {{else}}
                <form action="/users/{{id}}/documents" method="POST">
            {{/if}}

        <div class="form-group">
            <label for="documentNumber">Document number:</label>
            <input type="text" class="form-control" id="documentNumber" name="documentNumber" minlength="5" 
            maxlength="12" value={{document.documentNumber}}>
        </div>
        <div class="form-group" >
            <label for="documentType"> Document type: </label>
            <select class="form-control" name="documentType">
                <option value="DNI">DNI</option>
                <option value="PASAPORTE">PASAPORTE</option>
            </select>
        </div>
        <div class="form-group">
            <label for="lostOrFound">Lost or found: </label>
            <select class="form-control" name="lostOrFound">
                <option value="LOST">Lost</option>
                <option value="FOUND">Found</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>


